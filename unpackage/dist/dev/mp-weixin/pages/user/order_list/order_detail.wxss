page {
  background-color: #F3F3F3;
}
.body {
  width: 100%;
  height: calc(100vh - 80rpx);
  overflow-y: auto;
  margin-bottom: 80rpx;
}
.order_status {
  width: 100%;
  height: 14vh;
  text-align: center;
  background: -webkit-linear-gradient(left, #FFB646 0%, #FE9C2D 100%);
  background: linear-gradient(left, #FFB646 0%, #FE9C2D 100%);
  color: #FFFFFF;
}
.order_status .title {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 7vh;
}
.order_status view {
  width: 100%;
  height: 7vh;
  font-size: 28rpx;
}
.order_address {
  width: 92%;
  padding: 0rpx 4%;
  height: 10vh;
  background-color: #FFFFFF;
  margin: 20rpx auto;
}
.order_address .address_img {
  width: 60rpx;
  height: 100%;
  background-color: #000000;
  margin-right: 20rpx;
}
.order_address .address {
  height: 100%;
  width: calc(100% - 80rpx);
}
.order_address .address > view {
  line-height: 5vh;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.order_address .address .address_detail {
  color: #A6A6A6;
  font-size: 28rpx;
}
.order_address > view {
  display: inline-block;
  float: left;
}
.order {
  width: 92%;
  padding: 0rpx 4%;
  background-color: #FFFFFF;
}
.order .title {
  width: 100%;
  height: 5vh;
  line-height: 5vh;
}
.order .order_message {
  height: 160rpx;
  width: 100%;
  border-top: 1rpx solid #F2F2F2;
  padding: 20rpx 0rpx;
  overflow: hidden;
  position: relative;
}
.order .order_message > view {
  display: inline-block;
  float: left;
}
.order .order_message .order_img {
  width: 160rpx;
  height: 160rpx;
  background-color: #007AFF;
}
.order .order_message .order_img > ._img {
  width: 100%;
  height: 100%;
}
.order .order_message .order_title {
  width: 52%;
  word-wrap: break-word;
  margin-left: 20rpx;
}
.order .order_message .order_price {
  width: 19%;
  margin-left: 20rpx;
}
.order .order_message .order_price > view {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.order .order_message .order_price .price {
  width: 100%;
}
.order .order_message .order_price .number {
  width: 100%;
  color: #727272;
  text-align: right;
}
.titles {
  background-color: #FFFFFF;
  width: 92%;
  padding: 0rpx 4%;
  margin: 20rpx auto;
}
.titles > view {
  font-size: 26rpx;
  color: #A3A3A3;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #F2F2F2;
}
.titles > view > view {
  display: inline-block;
  float: left;
  width: 50%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.titles > view .data {
  text-align: right;
  color: #000000;
}
.titles > view .price {
  color: #E65339;
  text-align: right;
  font-size: 32rpx;
}
.order_messages {
  width: 92%;
  padding: 20rpx 4%;
  background-color: #FFFFFF;
  font-size: 24rpx;
  color: #A3A3A3;
}
.order_messages > view {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 50rpx;
  line-height: 50rpx;
}
.bottom {
  width: 92%;
  height: 80rpx;
  background-color: #FFFFFF;
  padding: 0rpx 4%;
  position: fixed;
  bottom: 0rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.bottom .btn {
  height: 50rpx;
  font-size: 26rpx;
  line-height: 50rpx;
  text-align: center;
  padding: 0rpx 20rpx;
  border: 1rpx solid #000000;
  border-radius: 40rpx;
}
.bottom .btns {
  position: absolute;
  right: 4%;
}
.bottom .btns > view {
  display: inline-block;
  float: left;
  margin-left: 20rpx;
}

